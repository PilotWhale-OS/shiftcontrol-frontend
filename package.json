{
  "name": "shift-control",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test-headless": "ng test --watch=false --browsers=ChromeHeadless",
    "lint": "ng lint",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "generate-notificationservice-client": "dotnet tsrts --project ../backend/notificationservice/NotificationService.csproj --output ./src/notificationservice-client --naming-style camelCase",
    "generate-shiftservice-client": "openapi-generator-cli generate -g typescript-angular -i http://shiftservice.127.0.0.1.nip.io/v3/api-docs -o ./src/shiftservice-client --additional-properties fileNaming=kebab-case,withInterfaces=true --generate-alias-as-model --type-mappings set=Array",
    "generate-auditservice-client": "openapi-generator-cli generate -g typescript-angular -i http://auditservice.127.0.0.1.nip.io/v3/api-docs -o ./src/auditservice-client --additional-properties fileNaming=kebab-case,withInterfaces=true --generate-alias-as-model --type-mappings set=Array",
    "generate-shiftservice-client-ci": "openapi-generator-cli generate -g typescript-angular -i ./openapi.json -o ./src/shiftservice-client --additional-properties fileNaming=kebab-case,withInterfaces=true --generate-alias-as-model --type-mappings set=Array"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.15",
    "@angular/cdk": "^19.2.0",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@fortawesome/angular-fontawesome": "^1.0.0",
    "@fortawesome/free-regular-svg-icons": "^6.7.1",
    "@fortawesome/free-solid-svg-icons": "^6.7.1",
    "@microsoft/signalr": "^10.0.0",
    "@types/luxon": "^3.7.1",
    "keycloak-angular": "^19.0.2",
    "keycloak-js": "^26.2.1",
    "luxon": "^3.7.2",
    "ngx-toastr": "^19.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.13",
    "@angular-eslint/builder": "^21.0.1",
    "@angular-eslint/eslint-plugin": "21.0.1",
    "@angular-eslint/eslint-plugin-template": "21.0.1",
    "@angular-eslint/schematics": "21.0.1",
    "@angular-eslint/template-parser": "21.0.1",
    "@angular/cli": "^19.2.13",
    "@angular/compiler-cli": "^19.2.0",
    "@badeball/cypress-cucumber-preprocessor": "^23.2.1",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.7",
    "@cypress/angular": "^4.0.0",
    "@openapitools/openapi-generator-cli": "^2.25.2",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/eslint-plugin": "7.11.0",
    "@typescript-eslint/parser": "7.11.0",
    "cypress": "^15.7.0",
    "eslint": "8.57.1",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.2",
    "typescript": "~5.7.2"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false,
    "stepDefinitions": "cypress/e2e/**/*.ts",
    "json": {
      "enabled": true
    },
    "html": {
      "enabled": true
    }
  }
}
